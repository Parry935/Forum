@model Post
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

<div>
    <span class="flex-center" style="font-size:20px;">@Model.Likes.Count()</span>
    <div class="flex-center" style="margin-top:10px;">
    @if (User.Identity.IsAuthenticated)
    {
        @if (Model.Likes.Any(m => m.UserId == UserManager.GetUserId(User)))
        {
            <i style="color:#20E300; cursor:pointer; font-size:20px;" onclick="DeleteLike(@Model.Id)" class="fas fa-thumbs-up"></i>
        }
        else
        {
           <i style="color: #B0E2BB; cursor:pointer; font-size: 20px;" onclick="CreateLike(@Model.Id)" class="fas fa-thumbs-up"></i>
        }
    }
    else
    {
        <i style="font-size: 20px; color: #B0E2BB;" class="fas fa-thumbs-up"></i>
    }
     </div>

</div>


