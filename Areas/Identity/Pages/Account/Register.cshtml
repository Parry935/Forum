@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="top-container">
    <h2>Create new account</h2>
    <a asp-controller="Home" asp-action="Index" asp-area="CustomUser" class="btn-back">Back to forum</a>
</div>
<div style="border-top: 2px groove #ffffff"></div>

<div class="my-flex-container">
    <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form_item">
            <label asp-for="Input.Nick"></label>
            <input asp-for="Input.Nick" placeholder="Nick" class="form-control" />
            <span asp-validation-for="Input.Nick" style="color: #FFA7A7; font-size:17px"></span>
        </div>
        <div class="form_item">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" placeholder="Email" class="form-control" />
            <span asp-validation-for="Input.Email" style="color: #FFA7A7; font-size:17px"></span>
        </div>
        <div class="form_item">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" placeholder="Password" class="form-control" />
            <span asp-validation-for="Input.Password" style="color: #FFA7A7; font-size:17px"></span>
        </div>
        <div class="form_item">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" style="color: #FFA7A7; font-size:17px"></span>
        </div>
        <input type="submit" value="Register" class="btn-create" style="margin-top:30px;" />
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
