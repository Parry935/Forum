@model IEnumerable<Forum.Models.Category>
@{
    ViewData["Title"] = "Index";
}




<div class="top-container">
    <h2>Categories</h2>
    <a asp-controller="Category" asp-action="Create" class="btn-create">Create new category</a>
</div>
<div style="border-top: 2px groove #ffffff"></div>
@if (Model.Count() > 0)
{
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td><img src="@item.Image" style="width:40%; margin:auto; display:block; border-radius:15px;" /></td>
                    <td>@Html.DisplayFor(m => item.Description)</td>
                    <td style="display:flex">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-create"><i class="far fa-edit"></i></a>  
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn-del"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
}

else
{
    <div class="my-container">
        Brak kategorii
    </div>
}

