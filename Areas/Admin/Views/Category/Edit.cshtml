@model Forum.Models.Category
@{
    ViewData["Title"] = "Edit";
}

<div class="top-container">
    <h2>Edit category</h2>
    <a asp-controller="Category" asp-action="Index" class="btn-back">Back to list</a>
</div>
<div style="border-top: 2px groove #ffffff"></div>

    <form method="post" enctype="multipart/form-data" asp-action="Edit" class="my-flex-container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div>
            <img src="@Model.Image" style="width:200px;height:auto; border-radius:15px;"/>
        </div>
        <div>
            <div class="form_item">
                <label asp-for="Name"></label>
                <input asp-for="Name" placeholder="Name" class="form-control" />
                <span asp-validation-for="Name" style="color: #FFA7A7; font-size:17px"></span>
            </div>
            <div class="form_item">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" placeholder="Description" class="form-control" style="height:100px"></textarea>
            </div>
            <div class="form_item">
                <label asp-for="Image"></label><br />
                <input type="file" name="files" class="btn-yel" />
            </div>
            <input type="submit" value="Submit" class="btn-create" />
        </div>
    </form>


@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}

